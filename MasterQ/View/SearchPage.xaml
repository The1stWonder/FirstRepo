      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>-->

	<ListView x:Name="listView">
			<ListView.ItemTemplate>
				<DataTemplate>
				<TextCell Text="{Binding name}" Detail="{Binding comment}" />
			</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
    
</ContentPage>