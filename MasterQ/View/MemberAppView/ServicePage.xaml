<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Title="เลือกบริการ"
    BackgroundImage="bg4.png"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MasterQ.ServicePage"
	NavigationPage.HasNavigationBar="False">

	<Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
			<RowDefinition Height="75*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="100*" />
        </Grid.ColumnDefinitions>

		<Image Grid.Row="0" Grid.Column="0"  Source="h_service.png" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
		<Grid Margin="10,20,10,0" Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="50*" />
                <ColumnDefinition  Width="50*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0"  Source="btn_back.png" HorizontalOptions="Start" HeightRequest="50" >
			<Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnImageBack" />
                    </Image.GestureRecognizers>
                </Image>
            <Image Grid.Row="0" Grid.Column="1"  Source="btn_location.png"  HorizontalOptions="End" HeightRequest="50">
            <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnImageMap" />
                    </Image.GestureRecognizers>
                </Image>
			<Label x:Name="branchName" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  Text="" FontSize="30" TextColor="White"  HorizontalTextAlignment="End" />
        </Grid>
		
        <ListView
                RowHeight="80"
				Grid.Row="1" 
				Grid.Column="0" 
                HeightRequest="50"
			 	ItemTapped="itemTapped"
         		x:Name="ServiceListview" 
                BackgroundColor="White"
                ItemsSource="{Binding Items}" 
                VerticalOptions="FillAndExpand"  
                RefreshCommand="{Binding LoadItemsCommand}" 
                IsRefreshing="{Binding IsBusy, Mode=OneWay}" 
                CachingStrategy="RecycleElement" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="30,20,0,30">
                                <Label Text="{Binding serviceName}" TextColor="#000080" Style="{DynamicResource ListItemTextStyle}" FontSize="25" />
                                <Label Text="{Binding queueNumber, StringFormat='จำนวนคิวทั้งหมด  {0} คิว'}" TextColor="Black" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="13" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
        </ListView>
	</Grid>
</ContentPage>
