<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Title="เลือกบริการ"
    BackgroundImage="bg4.png"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MasterQ.ServicePage">
	<ContentPage.Content>
        <ListView
				Margin="20,0,5,0"
			 	ItemTapped="itemTapped"
         		x:Name="ServiceListview" 
                BackgroundColor="Transparent"
                ItemsSource="{Binding Items}" 
                VerticalOptions="FillAndExpand"  
                RefreshCommand="{Binding LoadItemsCommand}" 
                IsPullToRefreshEnabled="true" 
                IsRefreshing="{Binding IsBusy, Mode=OneWay}" 
                CachingStrategy="RecycleElement" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding serviceName}" TextColor="White" Style="{DynamicResource ListItemTextStyle}" FontSize="16" />
                                <Label Text="{Binding serviceDesc StringFormat='รายละเอียด : {0}'}" TextColor="White" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="13" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
